{
  "version": 1,
  "canisters": {
    "neurofund_backend": {
      "type": "motoko",
      "main": "src/neurofund_backend/main.mo"
    },
    "neurofund_frontend": {
      "dependencies": ["neurofund_backend"],
      "type": "assets",
      "entrypoint": "src/neurofund_frontend/src/app/*",
      "source": [
        "src/neurofund_frontend/src/public",
        "src/neurofund_frontend/lib"
      ],
      "candid": "src/neurofund_frontend/declarations/neurofund_backend.did"
    }
  },
  "output_env_file": ".env",
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943",
      "type": "ephemeral"
    }
  }
}